package com.example.crudrestful.dao;

import java.util.ArrayList;
import java.util.Collection;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import com.example.crudrestful.model.Job;
import org.springframework.stereotype.Repository;

@Repository
public class JobDAO {
	private static final Map<String, Job> empMap = new HashMap<String, Job>();
	 
    static {
        initEmps();
    }
 
    private static void initEmps() {
    	Job emp1 = new Job("E01", "Smith", "Clerk");
    	Job emp2 = new Job("E02", "Allen", "Salesman");
    	Job emp3 = new Job("E03", "Jones", "Manager");
 
        empMap.put(emp1.getEmpNo(), emp1);
        empMap.put(emp2.getEmpNo(), emp2);
        empMap.put(emp3.getEmpNo(), emp3);
    }
 
    public Job getEmployee(String empNo) {
        return empMap.get(empNo);
    }
 
    public Job addEmployee(Job emp) {
        empMap.put(emp.getEmpNo(), emp);
        return emp;
    }
 
    public Job updateEmployee(Job emp) {
        empMap.put(emp.getEmpNo(), emp);
        return emp;
    }
 
    public void deleteEmployee(String empNo) {
        empMap.remove(empNo);
    }
 
    public List<Job> getAllEmployees() {
        Collection<Job> c = empMap.values();
        List<Job> list = new ArrayList<Job>();
        list.addAll(c);
        return list;
    }
}
